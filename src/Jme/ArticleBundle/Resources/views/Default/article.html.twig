<article>

    {% if listMode == false %}
        <h1>{{article.title}}</h1>
    {% else %}
        <a class="title-link" href="{{ path('jme_article_view', {article: article.slug}) }}"><h1>{{article.title}}</h1></a>
    {% endif %}

    <p class="date">{{article.created|date('F n, Y H:i')}} {{ jme_tags(article) }}</p>

    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
        {{jme_article_controls(article)}}
    {% endif %}

    {% if listMode == true %}
        <div class="brief">{{article.brief|nl2br}}</div>
    {% endif %}

    {% if listMode == false %}
        <div class="content">{{article.content|raw}}</div>
    {% endif %}


</article>