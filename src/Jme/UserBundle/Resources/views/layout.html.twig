<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Login! | janimattiellonen.fi{% endblock %}</title>

    <link href="//code.jquery.com/ui/1.10.4/themes/ui-lightness/jquery-ui.min.css" rel="stylesheet" media="screen" />
    <link href="{{ asset('bundles/jmemain/js/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet" media="screen" />
    <link href="{{ asset('bundles/jmemain/js/bootstrap/css/bootstrap-theme.min.css')}}" rel="stylesheet" media="screen" />


    {% block stylesheets %}{% endblock %}

    {% stylesheets filter='yui_css' output='/css/login.css'
        '@JmeMainBundle/Resources/css/normalize.css'
        '@JmeMainBundle/Resources/css/highlight.js/zenburn.css'
        '@JmeMainBundle/Resources/less/main.less'
        '@JmeUserBundle/Resources/less/login.less'
    %}

    <link href="{{ asset_url }}" rel="stylesheet" media="screen" />
    {% endstylesheets %}

    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />

    <script>
        var App = App || {};
    </script>

    <script type="text/javascript" src="{{ asset('bundles/bazingajstranslation/js/translator.min.js') }}"></script>
    <script type="text/javascript" src="{{ url('bazinga_jstranslation_js') }}"></script>

    {{ jme_ga() }}
</head>
<body>

{{ jme_flash() }}

<div id="page">
    {% block content %}{% endblock %}
</div>


<script type="text/javascript" src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<script type="text/javascript" src="//code.jquery.com/ui/1.10.4/jquery-ui.min.js"></script>
<script type="text/javascript" src="bundles/jmemain/js/bootstrap/js/bootstrap.min.js"></script>

{% javascripts output="/js/login.js" filter="?yui_js"
'@JmeMainBundle/Resources/js/highlight.pack.js'
'@JmeMainBundle/Resources/coffee/RemoveDialog.coffee'
'@JmeMainBundle/Resources/coffee/main.coffee'
'@JmeArticleBundle/Resources/coffee/article.coffee'
%}

<script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}

{% block javascripts %}{% endblock %}
<script type="text/javascript">
    $(document).ready(function() {
        $('article .content pre code').each(function(i, e) {hljs.highlightBlock(e)});
    });
</script>
</body>
</html>