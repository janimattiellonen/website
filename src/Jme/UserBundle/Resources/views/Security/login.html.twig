{% extends 'JmeUserBundle::layout.html.twig' %}

{% block content %}
    <div id="login-box">
        <div class="wrapper">
            <div class="error">{% if error %}{{ error.message|trans }}{% endif %}</div>

            <form action="{{ path('login_check') }}" method="post">
                <p><span></span><input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Username" /></p>

                <p><span></span><input type="password" id="password" name="_password" placeholder="Password" /></p>

                {#
                    If you want to control the URL the user is redirected to on success (more details below)
                    <input type="hidden" name="_target_path" value="/account" />
                #}

                <button class="btn" type="submit">{{'login.login'|trans}}</button>
            </form>
        </div>
    </div>
{% endblock %}

