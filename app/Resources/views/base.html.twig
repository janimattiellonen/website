<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Welcome!{% endblock %}</title>


    {% block stylesheets %}{% endblock %}

    <link href="{{ asset('css/jquery-ui/ui-lightness/jquery-ui-1.8.23.custom.css') }}" rel="stylesheet" media="screen" />

    {% stylesheets filter='yui_css' output='/css/common.css'
            '@JmeMainBundle/Resources/less/main.less'
    %}

    <link href="{{ asset_url }}" rel="stylesheet" media="screen" />
    {% endstylesheets %}

    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />

    <script type="text/javascript" src="{{ asset('bundles/bazingaexposetranslation/js/translation.js') }}"></script>
    <script type="text/javascript" src="{{ url('bazinga_exposetranslation_js') }}"></script>
</head>
<body>

<nav>{{ knp_menu_render('main') }}</nav>

    {{ jme_flash() }}

    {% block content %}{% endblock %}

    {% javascripts output="/js/main.js" filter="coffee,?yui_js"
        '@JmeMainBundle/Resources/coffee/RemoveDialog.coffee'
        '@JmeMainBundle/Resources/coffee/main.coffee'
    %}

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.8.23/jquery-ui.min.js"></script>

    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}

    {% block javascripts %}{% endblock %}
</body>
</html>